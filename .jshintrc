/**!
 * See http://www.jshint.com/docs/options/ for all available options.
 */
{
	/**
	 * Enforcing options
	 * See http://www.jshint.com/docs/options/#enforcing-options
	 */
	"bitwise": true,
	"camelcase": true,
	"curly": true,
	"eqeqeq": true,
	"immed": true,
	"latedef": true,
	"newcap": true,
	"noarg": true,
	"undef": true,
	"unused": true,
	"strict": true,
	"trailing": true,

	/**
	 * Relaxing options
	 * See http://www.jshint.com/docs/options/#relaxing-options
	 */
	"eqnull": true,
	"esnext": true,
	"smarttabs": true,

	/**
	 * Environments
	 * See http://www.jshint.com/docs/options/#environments
	 */
	"node": true,
	"browser": true,
	"jquery": true,

	/**
	 * Globals
	 * See http://www.jshint.com/docs/
	 */
	"globals": {
		// RequireJS
		"module": true,
		"require": true,
		"requirejs": true,
		"define": true,

		// Jasmin
		"sinon": true,
		"describe": true,
		"it": true,
		"expect": true,
		"beforeEach": true,
		"afterEach": true
	}
}
